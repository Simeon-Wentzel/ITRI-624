                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/txtrainfall"
                android:layout_alignTop="@+id/imgSeed1"
                android:scaleType="fitXY"
                android:background="#7f7278"
                android:src="@mipmap/tomato" />

            <ImageButton
                android:id="@+id/imgSeed3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/imgCrop3"
                android:background="#7f7278"
                android:layout_alignTop="@+id/imgSeed1"
                android:scaleType="fitXY"
                android:src="@mipmap/onion" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relative_bottom_navigatin_view"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:gravity="bottom">
            <include layout="@layout/bottom_nav" />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/top_nav_header"/>
