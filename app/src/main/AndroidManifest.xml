        </activity>
        <activity
            android:name=".Home.HomeActivity"
            android:label="@string/title_home">
        </activity>
        <activity
            android:name=".WeatherPackage.WeatherActivity"
            android:label="@string/title_weather">
        </activity>
        <activity
            android:name=".Crops.CropsActivity"
            android:label="@string/title_crops">
